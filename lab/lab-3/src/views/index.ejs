    <script src="./index.bundle.js"></script>

    <title>MÐ£KA</title>
</head>
<body>

<%- include("./header") %>

<div id="ContentFrame" class="ContentFrame">
    <div id="UserListFrame" class="UserListFrame">
        <% for (let item of users_list) { %>
            <%- include("./usercard", item) %>
        <% } %>
    </div>
    <div id="SelectedUserFrame" class="SelectedUserFrame">
        <% if (locals.selected_user !== undefined) { %>
            <%- include("./selecteduser", {news_list: news_list, ...selected_user}) %>
        <% } else { %>
            <div class="UserDummy">
                <div class="centred">User not selected</div>
            </div>
        <% } %>
    </div>
</div>
</body>

</html>
