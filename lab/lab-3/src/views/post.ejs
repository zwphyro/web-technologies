<div id="PostFrame" class="PostFrame">
    <div class="PostBg"></div>
    <img id="<%= id %>" class="PostUserAvatar UserReference" src="<%= profile_picture_url %>" alt="user_pfp"
         width="100%" height="100%">
    <div id="<%= id %>" class="PostUserFullName UserReference"><%= first_name %> <%= last_name %></div>
    <div style="position: relative; z-index: -2; height: 60px; width: 100%"></div>
    <div class="PostContent">
        <%= content %>
    </div>
    <div style="position: relative; z-index: -2; height: 20px; width: 100%"></div>

</div>
